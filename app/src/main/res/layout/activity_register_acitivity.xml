<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000"
   >
    <ProgressBar
        android:id="@+id/pbar"
        android:layout_width="match_parent"
        android:layout_centerInParent="true"
        android:layout_height="wrap_content"/>


    <ScrollView
        android:layout_width="match_parent"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentBottom="true"
        android:layout_height="fill_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:id="@+id/textView79"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:text=" Register Your Self"
                android:textColor="#ffffff"
                android:visibility="gone"
                android:textSize="@dimen/_16sdp"
                android:layout_marginStart="20dp"
                />



            <TextView
                android:id="@+id/textView7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:text="Register Yourself"
                android:textColor="#ffffff"
                android:textSize="@dimen/_17sdp"
                android:layout_marginStart="20dp"
                />

            <EditText
                android:layout_marginTop="10dp"
                android:id="@+id/fullName"
                android:layout_width="@dimen/_220sdp"
                android:layout_height="@dimen/_40sdp"
                android:backgroundTint="#ffffff"
                android:ems="10"
                android:drawablePadding="10dp"
                android:drawableStart="@drawable/usr"
                android:hint="Name"
                android:layout_gravity="center"
                android:inputType="textPersonName"
                android:padding="10dp"
                android:text=""
                android:textColor="#ffffff"
                android:textColorHint="#ffffff"
                android:textSize="16sp"
                />
            <EditText
                android:id="@+id/email"
                android:layout_width="@dimen/_220sdp"
                android:layout_height="@dimen/_40sdp"
                android:layout_marginTop="1dp"
                android:backgroundTint="#ffffff"
                android:layout_gravity="center"
                android:drawablePadding="10dp"
                android:drawableLeft="@drawable/usr"
                android:hint="Email"
                android:inputType="textEmailAddress"
                android:padding="10dp"
                android:text=""
                android:textColorHint="#ffffff"
                android:textColor="@color/white"
                android:textSize="16sp"
                />
            <EditText
                android:id="@+id/id"
                android:layout_width="@dimen/_220sdp"
                android:layout_height="@dimen/_40sdp"
                android:layout_marginTop="1dp"
                android:backgroundTint="#ffffff"
                android:hint="Id"
                android:drawablePadding="10dp"
                android:inputType="text"
                android:textColor="@color/white"
                android:padding="10dp"
                android:text=""
                android:textColorHint="#ffffff"
                android:textSize="16sp"
                android:layout_gravity="center"/>

            <EditText
                android:id="@+id/pContact"
                android:layout_width="@dimen/_220sdp"
                android:layout_height="@dimen/_40sdp"
                android:layout_gravity="center"
                android:layout_marginTop="1dp"
                android:backgroundTint="#ffffff"
                android:drawablePadding="10dp"
                android:hint="Phone"
                android:inputType="number"
                android:padding="10dp"
                android:text=""
                android:textColor="@color/white"
                android:textColorHint="#ffffff"
                android:textSize="16sp" />

            <EditText
                android:id="@+id/passEt"
                android:layout_width="@dimen/_220sdp"
                android:layout_height="@dimen/_40sdp"
                android:backgroundTint="#ffffff"
                android:hint="Password"
                android:drawablePadding="10dp"
                android:layout_gravity="center"
                android:layout_marginTop="1dp"
                android:padding="10dp"
                android:text=""
                android:inputType="textPassword"
                android:textColor="@color/white"
                android:textColorHint="#ffffff"
                android:textSize="16sp"
                />
            <EditText
                android:id="@+id/conpassEt"
                android:layout_width="@dimen/_220sdp"
                android:layout_height="@dimen/_40sdp"
                android:backgroundTint="#ffffff"
                android:hint="Confirm Password"
                android:inputType="textPassword"
                android:drawablePadding="10dp"
                android:layout_gravity="center"
                android:layout_marginTop="1dp"
                android:padding="10dp"
                android:text=""
                android:textColor="@color/white"
                android:textColorHint="#ffffff"
                android:textSize="16sp"
                />
            <EditText
                android:id="@+id/clubEt"
                android:layout_width="@dimen/_220sdp"
                android:layout_height="@dimen/_40sdp"
                android:backgroundTint="#ffffff"
                android:hint="Club"
                android:drawablePadding="10dp"
                android:layout_gravity="center"
                android:layout_marginTop="1dp"
                android:padding="10dp"
                android:text=""
                android:textColor="@color/white"
                android:textColorHint="#ffffff"
                android:textSize="16sp"
                />
            <EditText
                android:id="@+id/clubposEt"
                android:layout_width="@dimen/_220sdp"
                android:layout_height="@dimen/_40sdp"
                android:backgroundTint="#ffffff"
                android:hint="Club Position"
                android:inputType="text"
                android:drawablePadding="10dp"
                android:layout_gravity="center"
                android:layout_marginTop="1dp"
                android:padding="10dp"
                android:text=""
                android:textColor="@color/white"
                android:textColorHint="#ffffff"
                android:textSize="16sp"
                />
            <Button
                android:id="@+id/submitBtn"
                android:layout_width="200dp"
                android:layout_height="45dp"
                android:layout_marginTop="60dp"
                android:background="#00BCD4"
                android:text="Create Account"
                android:textColor="#FFFFFF"
                android:textSize="16sp"
                android:layout_gravity="center"
                android:textStyle="bold"
                />

        </LinearLayout>
    </ScrollView>

</RelativeLayout>