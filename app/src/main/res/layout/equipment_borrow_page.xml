<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="match_parent">



    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="You Want To Book : "
        android:textStyle="bold"
        android:id="@+id/title"
        android:textSize="@dimen/_15sdp"
        />

  <LinearLayout
      android:layout_width="match_parent"
      android:orientation="horizontal"
      android:layout_height="wrap_content">
      <TextView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:textStyle="bold"
          android:textSize="@dimen/_13sdp"
          android:text="Quantity:"/>

      <EditText
          android:id="@+id/quatityEt"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:hint="How Many You Want"
          android:inputType="numberSigned"
          android:textSize="@dimen/_13sdp"/>




  </LinearLayout>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/_14sdp"
        android:textStyle="bold"
        android:text="Pick Up Time :"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginEnd="@dimen/_5sdp"
        android:layout_marginStart="@dimen/_5sdp"
        android:weightSum="2">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="2dp"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="Time : " />

            <TextView
                android:id="@+id/timeEdit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/edit_text_outline"
                android:drawableLeft="@drawable/time_icon"
                android:drawablePadding="10dp"
                android:hint="00:00"
                android:gravity="start|center"
                android:textSize="15sp"
                android:textColor="#000"
                android:textStyle="bold"
                android:padding="10dp" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="2dp"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="Date : " />

            <TextView
                android:id="@+id/dateEdit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/edit_text_outline"
                android:drawableStart="@drawable/date_icon"
                android:drawablePadding="10dp"
                android:gravity="center|start"
                android:textSize="15sp"
                android:textColor="#000"
                android:textStyle="bold"
                android:hint="dd/mm/yyyy"
                android:padding="10dp" />


        </LinearLayout>
    </LinearLayout>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/_14sdp"
        android:textStyle="bold"
        android:text="Return Time :"/>
    <LinearLayout
        android:layout_marginEnd="@dimen/_5sdp"
        android:layout_marginStart="@dimen/_5sdp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"

        android:weightSum="2">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="2dp"
            android:layout_weight="1"

            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="Time : " />

            <TextView
                android:id="@+id/droptimeEdit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/edit_text_outline"
                android:drawableLeft="@drawable/time_icon"
                android:drawablePadding="10dp"
                android:gravity="start|center"
                android:hint="00:00"
                android:padding="10dp"
                android:textColor="#000"
                android:textSize="15sp"
                android:textStyle="bold" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="2dp"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="Date : " />

            <TextView
                android:id="@+id/dropdateEdit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/edit_text_outline"
                android:drawableStart="@drawable/date_icon"
                android:drawablePadding="10dp"
                android:gravity="center|start"
                android:textSize="15sp"
                android:textColor="#000"
                android:textStyle="bold"
                android:hint="dd/mm/yyyy"
                android:padding="10dp" />


        </LinearLayout>
    </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/_14sdp"
            android:textStyle="bold"
            android:layout_marginTop="@dimen/_5sdp"
            android:text=" Details :"/>
        <EditText
            android:id="@+id/detailsEt"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_90sdp"
            android:layout_marginStart="@dimen/_15sdp"
            android:layout_marginTop="@dimen/_8sdp"
            android:layout_marginEnd="@dimen/_15sdp"
            android:hint="Enter Deatils Of Booking..." />

        <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
        <Button
            android:id="@+id/reqBtn"
            android:layout_width="@dimen/_120sdp"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:text="Request Booking"
            android:textAllCaps="false"
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_marginEnd="@dimen/_35sdp"
            android:layout_height="@dimen/_50sdp"/>


    </RelativeLayout>
    </LinearLayout>
</ScrollView>